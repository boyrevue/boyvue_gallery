@prefix gali: <http://gallery.example.org/import#> .

# =============================================================================
# ONTOLOGY METADATA
# =============================================================================

<http://gallery.example.org/ontology>
    a owl:Ontology ;
    owl:versionInfo "1.0.0" ;
    dcterms:title "Gallery Platform Ontology"@en ;
    dcterms:description "Comprehensive ontology for multilingual media gallery with streaming integration"@en ;
    dcterms:creator "Gallery Platform" ;
    dcterms:created "2025-01-01"^^xsd:date .

# =============================================================================
# CORE CLASSES
# =============================================================================

# -----------------------------------------------------------------------------
# Media Base Classes
# -----------------------------------------------------------------------------

gal:MediaItem
    a owl:Class ;
    rdfs:label "Media Item"@en ;
    rdfs:label "Élément Média"@fr ;
    rdfs:label "Elemento Multimedia"@es ;
    rdfs:label "Medienelement"@de ;
    rdfs:label "メディアアイテム"@ja ;
    rdfs:comment "Base class for all media content"@en ;
    rdfs:subClassOf schema:MediaObject .

gal:Image
    a owl:Class ;
    rdfs:label "Image"@en ;
    rdfs:label "Image"@fr ;
    rdfs:label "Imagen"@es ;
    rdfs:label "Bild"@de ;
    rdfs:label "画像"@ja ;
    rdfs:subClassOf gal:MediaItem, schema:ImageObject .

gal:Video
    a owl:Class ;
    rdfs:label "Video"@en ;
    rdfs:label "Vidéo"@fr ;
    rdfs:label "Vídeo"@es ;
    rdfs:label "Video"@de ;
    rdfs:label "動画"@ja ;
    rdfs:subClassOf gal:MediaItem, schema:VideoObject .

gal:Gallery
    a owl:Class ;
    rdfs:label "Gallery"@en ;
    rdfs:label "Galerie"@fr ;
    rdfs:label "Galería"@es ;
    rdfs:label "Galerie"@de ;
    rdfs:label "ギャラリー"@ja ;
    rdfs:comment "Collection of media items"@en ;
    rdfs:subClassOf schema:CollectionPage .

gal:PhotoSet
    a owl:Class ;
    rdfs:label "Photo Set"@en ;
    rdfs:label "Ensemble de Photos"@fr ;
    rdfs:label "Conjunto de Fotos"@es ;
    rdfs:label "Fotoset"@de ;
    rdfs:label "フォトセット"@ja ;
    rdfs:comment "Curated collection of related images"@en ;
    rdfs:subClassOf gal:Gallery .

# -----------------------------------------------------------------------------
# Category and Organization Classes
# -----------------------------------------------------------------------------

gal:Category
    a owl:Class ;
    rdfs:label "Category"@en ;
    rdfs:label "Catégorie"@fr ;
    rdfs:label "Categoría"@es ;
    rdfs:label "Kategorie"@de ;
    rdfs:label "カテゴリー"@ja ;
    rdfs:subClassOf skos:Concept .

gal:Tag
    a owl:Class ;
    rdfs:label "Tag"@en ;
    rdfs:label "Étiquette"@fr ;
    rdfs:label "Etiqueta"@es ;
    rdfs:label "Schlagwort"@de ;
    rdfs:label "タグ"@ja ;
    rdfs:subClassOf skos:Concept .

gal:SourceSite
    a owl:Class ;
    rdfs:label "Source Site"@en ;
    rdfs:label "Site Source"@fr ;
    rdfs:label "Sitio de Origen"@es ;
    rdfs:label "Quellseite"@de ;
    rdfs:label "ソースサイト"@ja ;
    rdfs:comment "Original website where content was sourced"@en .

# -----------------------------------------------------------------------------
# User Interaction Classes
# -----------------------------------------------------------------------------

galu:User
    a owl:Class ;
    rdfs:label "User"@en ;
    rdfs:label "Utilisateur"@fr ;
    rdfs:label "Usuario"@es ;
    rdfs:label "Benutzer"@de ;
    rdfs:label "ユーザー"@ja ;
    rdfs:subClassOf foaf:Person .

galu:Creator
    a owl:Class ;
    rdfs:label "Creator"@en ;
    rdfs:label "Créateur"@fr ;
    rdfs:label "Creador"@es ;
    rdfs:label "Ersteller"@de ;
    rdfs:label "クリエイター"@ja ;
    rdfs:subClassOf galu:User ;
    rdfs:comment "Content creator/model"@en .

gal:Comment
    a owl:Class ;
    rdfs:label "Comment"@en ;
    rdfs:label "Commentaire"@fr ;
    rdfs:label "Comentario"@es ;
    rdfs:label "Kommentar"@de ;
    rdfs:label "コメント"@ja ;
    rdfs:subClassOf schema:Comment .

gal:Rating
    a owl:Class ;
    rdfs:label "Rating"@en ;
    rdfs:label "Note"@fr ;
    rdfs:label "Puntuación"@es ;
    rdfs:label "Bewertung"@de ;
    rdfs:label "評価"@ja ;
    rdfs:subClassOf schema:Rating .

# -----------------------------------------------------------------------------
# Streaming Classes
# -----------------------------------------------------------------------------

gals:StreamingProfile
    a owl:Class ;
    rdfs:label "Streaming Profile"@en ;
    rdfs:label "Profil de Streaming"@fr ;
    rdfs:label "Perfil de Streaming"@es ;
    rdfs:label "Streaming-Profil"@de ;
    rdfs:label "ストリーミングプロフィール"@ja ;
    rdfs:comment "External streaming platform profile"@en .

gals:StreamingPlatform
    a owl:Class ;
    rdfs:label "Streaming Platform"@en ;
    rdfs:label "Plateforme de Streaming"@fr ;
    rdfs:label "Plataforma de Streaming"@es ;
    rdfs:label "Streaming-Plattform"@de ;
    rdfs:label "ストリーミングプラットフォーム"@ja .

gals:LiveStream
    a owl:Class ;
    rdfs:label "Live Stream"@en ;
    rdfs:label "Diffusion en Direct"@fr ;
    rdfs:label "Transmisión en Vivo"@es ;
    rdfs:label "Live-Stream"@de ;
    rdfs:label "ライブストリーム"@ja ;
    rdfs:subClassOf gal:MediaItem .

gals:Promo
    a owl:Class ;
    rdfs:label "Promo"@en ;
    rdfs:label "Promo"@fr ;
    rdfs:label "Promoción"@es ;
    rdfs:label "Promo"@de ;
    rdfs:label "プロモ"@ja ;
    rdfs:comment "Promotional content linking to streaming platforms"@en .

# =============================================================================
# PROPERTIES
# =============================================================================

# -----------------------------------------------------------------------------
# Media Properties
# -----------------------------------------------------------------------------

gal:hasMediaItem
    a owl:ObjectProperty ;
    rdfs:label "has media item"@en ;
    rdfs:domain gal:Gallery ;
    rdfs:range gal:MediaItem .

gal:belongsToGallery
    a owl:ObjectProperty ;
    rdfs:label "belongs to gallery"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range gal:Gallery ;
    owl:inverseOf gal:hasMediaItem .

gal:sourceUrl
    a owl:DatatypeProperty ;
    rdfs:label "source URL"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:anyURI .

gal:localPath
    a owl:DatatypeProperty ;
    rdfs:label "local path"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:string .

gal:thumbnailPath
    a owl:DatatypeProperty ;
    rdfs:label "thumbnail path"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:string .

gal:width
    a owl:DatatypeProperty ;
    rdfs:label "width"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:integer .

gal:height
    a owl:DatatypeProperty ;
    rdfs:label "height"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:integer .

gal:fileSize
    a owl:DatatypeProperty ;
    rdfs:label "file size"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:integer .

gal:mimeType
    a owl:DatatypeProperty ;
    rdfs:label "MIME type"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:string .

gal:duration
    a owl:DatatypeProperty ;
    rdfs:label "duration"@en ;
    rdfs:domain gal:Video ;
    rdfs:range xsd:duration .

gal:sortOrder
    a owl:DatatypeProperty ;
    rdfs:label "sort order"@en ;
    rdfs:domain gal:MediaItem ;
    rdfs:range xsd:integer .


# =============================================================================
# GalleryX Configuration
# Copy to .env and fill in values
# =============================================================================

# Application
NODE_ENV=development
PORT=3000
SITE_URL=http://localhost:3000
SITE_NAME=GalleryX

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gallery
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage
STORAGE_TYPE=local
# For S3 storage:
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-key
# S3_SECRET_KEY=your-secret

# CDN (optional)
CDN_URL=

# Authentication
JWT_SECRET=change-this-to-random-secret
WATERMARK_ENABLED=false

# Search (Elasticsearch)
ES_HOST=http://localhost:9200

# External Services
GA_ID=
SENTRY_DSN=
CF_ZONE_ID=
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# PhotoPost Import (for migration)
# =============================================================================
PP_DB_HOST=localhost
PP_DB_PORT=3306
PP_DB_NAME=photopost
PP_DB_USER=root
PP_DB_PASSWORD=
IMPORT_BATCH_SIZE=1000

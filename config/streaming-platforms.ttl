# -----------------------------------------------------------------------------
# Embed Configuration Settings
# -----------------------------------------------------------------------------

galcfg:StreamingEmbedConfig
    a rdfs:Class ;
    rdfs:label "Streaming Embed Configuration"@en .

galcfg:defaultEmbedConfig
    a galcfg:StreamingEmbedConfig ;
    galcfg:defaultWidth 640 ;
    galcfg:defaultHeight 480 ;
    galcfg:responsiveEnabled true ;
    galcfg:autoplayEnabled false ;
    galcfg:mutedByDefault true ;
    galcfg:showControls true ;
    galcfg:allowFullscreen true ;
    galcfg:lazyLoadEnabled true ;
    galcfg:placeholderImage "/assets/streaming-placeholder.webp"^^xsd:anyURI ;
    galcfg:offlineMessage "offline_message"@en .

